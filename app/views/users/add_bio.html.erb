<head>
  <style type="text/css">
    .field{
      text-transform: uppercase;
      font-size: 18px;
    }
    .field input{
      border:2px solid black;
      width: 100%;
    }
    .bord{
      background-color: #f5f5f5;
      border:3px solid black;
      padding: 40px;
    }
    body{
      background-color: #ffc220 !important;
    }

    .actions{
      display: flex;
      justify-content: center;
      padding: 20px;
    }
    .actions input{
      background-color: #ffc220;
      height: 40px;
      width: 100%;
      text-transform: uppercase;
      font-weight: bold;
      font-size: 20px;
      border:2px solid black;
    }
  </style>
</head>

<h1 style="text-align: center;font-size: 80px;text-transform: uppercase; margin-bottom: 0.5em">Add Bio</h1>
<hr class="hrstyle">
<div class="container bord" style="display: flex;justify-content: center;align-items: center;width: 50%;">
  <div>

    <%= form_tag users_bio_create_path,method: :post do %>
    <div class="field">
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <br>

    <div class="field">
      <%= label_tag :area %>
      <%= select_tag 'area',raw("<option>Badli</option><option>Shahbad</option>"),style: 'text-transform:capitalize;' %>
    </div>
    <br>

    <div class="field">
      <%= label_tag :course %>
      <%= select_tag 'course',options_from_collection_for_select(@courses, "id", "name"),style: 'text-transform:capitalize;'%>
     </div>
    <br>
    <%= submit_tag "Submit" %>

    <% end %>
  </div>
</div>